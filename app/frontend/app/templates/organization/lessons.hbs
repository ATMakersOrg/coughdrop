<h2>{{t "All Organization Lessons" key='all_org_lessons'}}</h2>
{{#if lessons.loading}}
  <p>{{t "Loading lessons..." key='loading_lessons'}}</p>
{{else if lessons.error}}
  <p>{{t "Error loading lessons" key='error_loading_lessons'}}</p>
{{else if lessons}}
  <p>{{t "Below are all the lessons that have been assigned for the organization. You can see which users have completed each lesson, or manage the list of available lessons." key='org_ lessons_explainer'}}</p>
  <!-- TODO: message users who... -->
  <h3>{{t "Supervisor Lessons" key='supervisor_lessons'}}</h3>
  {{#if supervisor_lessons}}
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>{{t "User" key='user'}}</th>
          {{#each supervisor_lessons as |lesson|}}
            <th>{{lesson.title}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each supervisors_with_lessons as |user|}}
          <tr>
            <td>{{user.user.user_name}}</td>
            {{#each user.lessons as |lesson|}}
              <td>
                {{#if lesson.completed}}
                  {{#if lesson.display_class}}
                    <span class='face_label'>
                      <span class={{lesson.display_class}}></span>
                    </span>
                  {{else}}
                    <span class='glyphicon glyphicon-ok'></span>
                  {{/if}}
                {{else}}
                  -
                {{/if}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>{{t "None to show" key='none_to_show'}}</p>
  {{/if}}

  <h3>{{t "Communicator Lessons" key='communicator_lessons'}}</h3>
  {{#if user_lessons}}
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>{{t "User" key='user'}}</th>
          {{#each user_lessons as |lesson|}}
            <th>{{lesson.title}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each users_with_lessons as |user|}}
          <tr>
            <td>{{user.user.user_name}}</td>
            {{#each user.lessons as |lesson|}}
              <td>
                {{#if lesson.completed}}
                  {{#if lesson.display_class}}
                    <span class='face_label'>
                      <span class={{lesson.display_class}}></span>
                    </span>
                  {{else}}
                    <span class='glyphicon glyphicon-ok'></span>
                  {{/if}}
                {{else}}
                  -
                {{/if}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>{{t "None to show" key='none_to_show'}}</p>
  {{/if}}

  <h3>{{t "Manager Lessons" key='manager_lessons'}}</h3>
  {{#if manager_lessons}}
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>{{t "User" key='user'}}</th>
          {{#each manager_lessons as |lesson|}}
            <th>{{lesson.title}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each managers_with_lessons as |user|}}
          <tr>
            <td>{{user.user.user_name}}</td>
            {{#each user.lessons as |lesson|}}
              <td>
                {{#if lesson.completed}}
                  {{#if lesson.display_class}}
                    <span class='face_label'>
                      <span class={{lesson.display_class}}></span>
                    </span>
                  {{else}}
                    <span class='glyphicon glyphicon-ok'></span>
                  {{/if}}
                {{else}}
                  -
                {{/if}}
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>{{t "None to show" key='none_to_show'}}</p>
  {{/if}}

  <h3>{{t "Current Lessons" key='current_lessons'}}</h3>
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th>{{t "Name" key='name'}}</th>
        <th>{{t "Link" key='link'}}</th>
        <th>{{t "Required" key='required'}}</th>
        <th>{{t "Targets" key='targets'}}</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each lessons as |lesson|}}
        <tr>
          <td>{{lesson.title}}</td>
          <td>
            <button class='btn btn-default btn-sm' {{action 'launch' lesson}}>{{t "Launch Lesson" key='launch_lesson'}}</button>
            {{#if lesson.time_estimate}}
              {{lesson.time_estimate}} {{t "min" key='minutes_abbreviated'}}
            {{/if}} -
            <a href={{lesson.url}} target='_blank'>link</a> 
          </td>
          <td>
            {{#if lesson.required}}
              {{#if lesson.due_at}}
                {{date lesson.due_at 'day'}}
              {{else}}
                {{t "Y" key='y'}}
              {{/if}}
            {{/if}}
          </td>
          <td>{{lesson.target_types_list}}</td>
          <td style='text-align: right;'>
            {{#if lesson.editable}}
              <a href='#' {{action 'edit' lesson}}><span class='glyphicon glyphicon-pencil'></span></a>&nbsp;&nbsp;&nbsp;&nbsp;
            {{/if}}
            <a href='#' {{action 'delete' lesson}}><span class='glyphicon glyphicon-remove'></span></a>
          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
{{else}}
  <p>{{t "Continuing education is an important, sometimes challenging endeavor. CoughDrop Lessons allow you to link to outside training resources for training and support purposes. You can assign these lessons to staff, or make them available for all users in your organization." key='lessons_explainer'}} </p>
{{/if}}

<div>
  {{#if model.premium}}
    <button class='btn btn-default' {{action 'add'}}>{{t "Add Lesson" key='add_lesson'}}</button>
  {{else}}
    <p>{{t "Lessons are currently only available for premium organizations" key='lessons_premium_only'}}</p>
  {{/if}}
</div>