{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>{{t "External App" key='external_app'}}</h3>
  </div>
  <div class="modal-body">
    <p>
      {{ app }}
    </p>
    <p>
      {{t "This button is configured to open the listed app. Do you want to continue?" key='confirm_open_app'}}
    </p>
  </div>
  <div class="modal-header">
    <button class='btn btn-primary btn-lg' {{action 'open_link'}}>{{t "Open the App" key='open_app'}}</button>
    <button class='btn btn-default btn-lg' {{action 'close'}}>{{t "Cancel" key='cancel'}}</button>
  </div>
{{/modal-dialog}}
