{{#modal-dialog action="close" opening='opening' closing='closing'}}
  <div class="modal-header">
    <button type="button" class="close" {{action 'close'}}>&times;</button>
    <h3>
      {{t "Editing Color Sets" key='editing_color_sets'}}
    </h3>
  </div>
  <div class="modal-body">
    <p>{{t "When editing boards, there is a default set of colors that can be used to help visually organize the layout, and to indicate different parts of speech. If you would prefer to use a custom color set for this purpose, you may program these settings here." key='editing_colors_explainer'}}</p>
    <div class='row'>
      <div class='col-sm-3'><b>{{t "Label" key='label'}}</b></div>
      <div class='col-sm-1'></div>
      <div class='col-sm-4'><b>{{t "Border" key='border'}}</b></div>
      <div class='col-sm-4'><b>{{t "Fill" key='fill'}}</b></div>
      <div class='col-sm-1'></div>
    </div>
    {{#unless styled_colors}}
      <p>{{t "No color sets defined" key='no_color_sets'}}</p>
    {{/unless}}
    {{#each styled_colors as |row|}}
      <div class='row' style='margin-bottom: 5px;'>
        <div class='col-sm-3'>{{input type='text' class='form-control' value=row.label placeholder='Brief Label'}}</div>
        <div class='col-sm-1'><div class='extra_color_preview' style={{row.style}}></div></div>
        <div class='col-sm-3'>
          {{input type='text' class='form-control' value=row.border placeholder='#ABC123'}}
        </div>
        <div class='col-sm-3'>
          {{input type='text' class='form-control' value=row.fill placeholder='#FED987'}}
        </div>
        <div class='col-sm-1'><a href='#' {{action 'remove' row}}><span class='glyphicon glyphicon-remove'></span></a></div>
      </div>
    {{/each}}
    <div class='row'>
      <div class='col-sm-3'><button class='btn btn-default' {{action 'add_row'}}>{{t "Add Color Set" key='add_color_set'}}</button></div>
    </div>
  </div>
  <div class="modal-footer">
    <button class='btn btn-default btn-lg' {{action 'confirm'}}>{{t "Update" key='update'}}</button>
    <a href="#" class="btn btn-default btn-lg" {{action 'close'}}>{{t "Close" key='close'}}</a>
  </div>
{{/modal-dialog}}
